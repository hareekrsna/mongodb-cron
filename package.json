{
  "name": "mongodb-cron",
  "version": "1.7.0",
  "description": "MongoDB collection as crontab",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "npm run clean && npx tsc",
    "example": "npm run build && npx ts-node ./src/scripts/example.ts",
    "lint": "npx tslint 'src/**/*.ts?(x)'",
    "prepublish": "npm run build",
    "test": "npm run lint && npx nyc npx hayspec test",
    "speedtest": "npx ts-node ./src/scripts/speedtest.ts"
  },
  "hayspec": {
    "require": [
      "ts-node/register"
    ],
    "match": [
      "./src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xpepermint/mongodb-cron.git"
  },
  "keywords": [
    "mongo",
    "mongodb",
    "database",
    "nosql",
    "cron",
    "schedule",
    "scheduling",
    "queue",
    "job",
    "jobs",
    "collection",
    "collections",
    "capped"
  ],
  "author": "Xpepermint (Kristijan Sedlak)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xpepermint/mongodb-cron/issues"
  },
  "homepage": "https://github.com/xpepermint/mongodb-cron#readme",
  "peerDependencies": {
    "mongodb": "^3.0.0"
  },
  "devDependencies": {
    "@hayspec/cli": "^0.10.0",
    "@hayspec/spec": "^0.8.3",
    "@types/dot-object": "^1.7.0",
    "@types/moment": "^2.13.0",
    "@types/mongodb": "^3.1.25",
    "@types/node": "^11.13.7",
    "mongodb": "^3.2.3",
    "nyc": "^14.0.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "cron-parser": "^2.11.0",
    "dot-object": "^1.9.0",
    "es6-sleep": "^2.0.2",
    "moment": "^2.24.0"
  }
}
